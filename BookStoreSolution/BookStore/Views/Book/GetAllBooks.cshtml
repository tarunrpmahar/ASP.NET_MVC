@model IEnumerable<BookModel>
@{
    //Layout = "_Layout"; defined in _viewstart.cshtml
    ViewData["Title"] = "All Books";
}

<link href="~/css/StyleSheet.css" rel="stylesheet" />

<div class="container">
    <h3 class="display-4" style="color:white">All Books</h3>
    <div class="row row-cols-1 row-cols-md-3">
        @foreach (var book in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card mb-4 shadow-sm allcard h-100">
                    @*<img src="~/images/gameofthrones.jpeg" />*@
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="book" asp-action="getbook" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">View details</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">By @book.Author</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

